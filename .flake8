[flake8]

# Maximum line length (aligned with Black formatting)
max-line-length = 88

# Error codes to ignore globally
# E203: whitespace before ':' (conflicts with Black)
# W503/W504: line break before/after binary operator (conflicts with Black)
# E741: ambiguous variable name (sometimes needed for mathematical notation)
# E501: line too long (handled by Black formatting)
# C901: too complex (complexity handled case-by-case with inline noqa)
# E701: multiple statements on one line (colon) - style preference
extend-ignore = E203, W503, W504, E741, E501, C901, E701

# Directories to exclude
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    docs/_build,
    site

# Per-file ignores - minimal set for legitimate cases
# E501: Line length - Black handles formatting
# C901: Complexity - some functions are inherently complex
per-file-ignores =
    main.py:C901
    scripts/*.py:E501,C901

# Maximum complexity
max-complexity = 10

# Application import names
application-import-names = main
