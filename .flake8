# Symbolic MCP - Flake8 Configuration
# Security-focused symbolic execution MCP server

[flake8]

# Maximum line length (aligned with Black formatting)
max-line-length = 88

# Error codes to ignore (no inline comments - flake8 7.x incompatible)
# E203: whitespace before ':' (conflicts with Black)
# W503/W504: line break before/after binary operator (conflicts with Black)
# F401: imported but unused (handled by isort)
# F403/F405: star import (sometimes needed for symbolic execution)
# E741: ambiguous variable name
# E501: line too long (handled by Black)
# E722: bare except (sometimes needed in symbolic execution)
# C901: too complex (handled by other tools)
extend-ignore = E203, W503, W504, F401, F403, F405, E741, E501, E722, C901, E701

# Directories to exclude
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    docs/_build,
    site

# Per-file ignores
# Pre-existing issues to address in future refactoring
per-file-ignores =
    test_*.py:F401,F811,E722,F841
    tests/*:F401,F811,E722,F841
    main.py:E501,E722,F401,F811,F841,C901,E402
    version_manager.py:E501,F401,F811,F541,C901
    scripts/*.py:E501,F401,F541,C901,E402
    conftest.py:F401,F811

# Maximum complexity
max-complexity = 10

# Application import names
application-import-names = main
