[bandit]
# Bandit configuration for symbolic-mcp
# Security-focused symbolic execution MCP server

# Exclude directories from security scanning
exclude = /tests/,/build/,/dist/,/docs/,/\.git/,/__pycache__/,/\.pytest_cache/,/\.tox/,/\.venv/,/venv/

# Tests to skip globally
# B101: assert_used (pytest uses assertions for test validation)
# B605: start_process_with_a_shell (dev script uses shell=True with controlled input)
# B607: start_process_with_partial_path (dev script runs known commands)
skips = B101,B605,B607
