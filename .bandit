# =============================================================================
# Symbolic MCP - Bandit Configuration
# Security-focused symbolic execution MCP server
# =============================================================================

[bandit]
# Exclude directories from security scanning
exclude_dirs = tests,build,dist,docs,.git,__pycache__,.pytest_cache,.tox

# Test files excluded by default but can be included if needed
# tests = included

# Number of processes to use for parallel analysis
jobs = 1

# Aggressiveness level (low, medium, high)
aggressive_level = low

# Maximum recursion depth
recursion_limit = 25

# Severity threshold (low, medium, high)
severity_level = low

# Confidence threshold (low, medium, high)
confidence_level = low

# Baseline file for ignoring known issues
# baseline = bandit-baseline.json

# Output format (json, txt, csv, yaml)
output_format = txt

# Output file path (optional)
# output_file = bandit-report.txt

# Include lines in the output
include_line_numbers = true

# List of tests to run (empty means all)
# tests = B101,B102,B103,B104,B105,B106,B107,B108,B110,B112,B201,B301,B302,B303,B304,B305,B306,B307,B308,B309,B310,B311,B312,B313,B314,B315,B316,B317,B318,B319,B320,B321,B322,B323,B324,B325,B401,B402,B403,B404,B405,B406,B407,B408,B409,B410,B411,B412,B413,B501,B502,B503,B504,B505,B506,B507,B601,B602,B603,B604,B605,B606,B607,B608,B609,B610,B611,B701,B702,B703

# List of tests to skip
skips =
    B101,  # assert_used (we use assertions in tests and defensive programming)
    B601,  # shell_injection_process (controlled usage in symbolic execution)
    B602,  # shell_injection_subprocess (controlled usage in symbolic execution)
    B603,  # subprocess_without_shell_equals_true (controlled usage)
    B401,  # import_subprocess (subprocess is used legitimately)
    B404,  # import_pickle (pickle is used in some contexts legitimately)

# Custom test directory
# test_directory = tests/security

# Progress bar
show_progress_bar = true

# Verbose output
verbose = false

# Quiet mode
quiet = false

# Debug mode
debug = false

# Config file path
# config_file = .bandit

# Profile name
# profile = default

# Ignore noqa comments
ignore_nosec = false

# Security test configuration for symbolic execution specific concerns
[bandit.symbolic_execution]
# Additional security concerns for symbolic execution tools
# These are custom checks beyond standard bandit rules

# Check for unrestricted code execution in symbolic execution
check_unrestricted_execution = true

# Check for dangerous imports in symbolic execution context
dangerous_imports = eval,exec,compile,input,open

# Check for resource exhaustion in symbolic execution
check_resource_exhaustion = true

# Check for path traversal in symbolic execution
check_path_traversal = true

# Check for command injection in symbolic execution
check_command_injection = true

# Check for unsafe deserialization
check_unsafe_deserialization = true

# Check for timing attacks in symbolic execution
check_timing_attacks = true
